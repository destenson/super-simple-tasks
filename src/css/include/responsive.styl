// Responsive for mobile devices

@media screen and (max-width: 420px)

  .content, .footer, #task-submit, #new-task
    width 100%

  #new-task-wrapper td, #new-task-input
    display inline-table
    width 100% !important

  input[type='checkbox']
    vertical-align middle
    
  #edit-task-overlay
    display none

  #task-list 

    li
      position relative
      padding-right 70px

      label
        max-width 100%

      .tag
        position absolute
        top 10px
        right 10px

      .drag-handle
        display none
        
      &:hover .edit
        display none !important

  .footer ul li
    width 100%
    margin-bottom 5px
    

@media screen and (max-width: 500px)
  .modal
      width 95%
