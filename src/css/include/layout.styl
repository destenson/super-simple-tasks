  color gray
  font-family 'Roboto', sans-serif
  font-size 14px
  font-weight 400
  line-height 1.4
  margin 0
  padding 0
  -webkit-font-smoothing antialiased
  -webkit-overflow-scrolling touch
  
.popup
  width 520px
  
