.task
  border 2px solid transparent
  border-radius radius
  overflow hidden
  padding 10px
  user-select none

  &:hover
    background-color background-gray
    
    .task-actions span
      display initial

  input[type='checkbox']
    cursor pointer
    height 15px
    margin 0
    width 28px

  label
    font-size font-small
    max-width 85%
    padding-left 28px
    text-indent -28px

  .drag-handle
    background-image url('../img/drag.svg')
    height 15px
    opacity 0.25
    margin 3px 0 0 8px
    width 10px

    &:hover
      cursor -webkit-grab
      cursor -moz-grab
      opacity 0.5
      
  .task-actions
    cursor pointer
    
    span
      display none
      margin-right 10px
      opacity 0.25
      transition opacity 150ms
      
      img
        vertical-align bottom

      &:hover
        opacity 0.50

  .tag
    border-radius 20px
    cursor pointer
    height 20px
    margin-top 1px
    width 20px

  [tag='gray']
    background xlight-gray

    &:hover
      background lighten(xlight-gray, 2)

  [tag='red']
    background red

    &:hover
      background lighten(red, 5)

  [tag='yellow']
    background yellow

    &:hover
      background lighten(yellow, 5)  

  [tag='green']
    background green

    &:hover
      background lighten(green, 2)
      
  [tag='blue']
    background blue

    &:hover
      background lighten(blue, 2)
      
  [tag='pink']
    background pink

    &:hover
      background lighten(pink, 2)
      
  [tag='purple']
    background purple

    &:hover
      background lighten(purple, 2)
      
.task.edited
  border 2px solid yellow
  
.task.edited-transition
  transition border 1000ms ease-out

.task.task-completed
  
  &:hover .task-actions
    display none
  
  label, .tag, .task-link
    opacity 0.25
    
  .drag-handle
    opacity 0.1
  
  label
    text-decoration line-through
  
.task-link
  clear both
  padding-left 28px
  
  a
    color lighter-gray
    display inline-block
    font-size font-xsmall - 0.1em
    max-width 80%
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    
    &:hover
      color blue