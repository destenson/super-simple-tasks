header
  background-color green
  color white
  height 48px
  padding 5px
  position absolute
  width 100%
  z-index z-index-header

  a
    color white
    padding 8px 12px 6px
    border-radius radius

    &:hover
      color white
      background lighten(green, 5)

  .header-left
    margin 2px 0 0 10px
    

#expand
  display none
  
.popup #expand
    display inherit