.modal-blanket
  background-color rgba(0, 0, 0, 0.6)
  bottom 0
  display none
  height 100%
  left 0
  opacity 0
  position fixed
  right 0
  top 0
  transition opacity transition-speed ease-in-out
  width 100%
  z-index z-index-modal-blanket
  
.modal
  background-color white
  border-bottom-left-radius radius
  border-bottom-right-radius radius
  box-shadow 0px 3px 6px rgba(0,0,0,0.15)
  left 50%
  min-height 300px
  position absolute
  padding 20px
  transform translate(-50%, -100%)
  transition transform transition-speed-slow ease-in-out
  width 700px
  z-index z-index-modal
  
  .modal-header
    overflow hidden
    
    img
      margin-top 5px
      
    #modal-close:hover
      cursor pointer
      opacity 0.6
  
  .modal-section
    margin-top 40px
    
  .modal-footer p
    font-size font-xsmall - 0.1
    color light-gray
  
.modal-show
  transform translate(-50%, 48px)
  
.fade
  opacity 1
  