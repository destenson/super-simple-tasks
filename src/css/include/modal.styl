.modal
  background-color white
  border-radius radius
  box-shadow 0px 5px 10px rgba(0,0,0,0.15)
  left 50%
  top 50%
  min-height 300px
  opacity 0
  position absolute
  pointer-events none
  padding 20px
  transform translate(-50%, -50%) scale(0.9, 0.9)
  transition transform transition-speed-fast cubic-bezier(0.65, 0.05, 0.36, 1), opacity transition-speed-fast ease-in-out
  width 600px
  z-index z-index-modal
  
  .modal-header
    margin-bottom 30px
    overflow hidden
    
  #modal-choose
    margin-top 70px
    
    #share-list, #join-list
      font-size 1.2em
      
    #disconnect
      bottom 18px
      position absolute
    
  #modal-share
    margin-top 50px
    
  #modal-join
    width 85%
    margin 50px auto 0
  
  .modal-section
    margin 20px 0
    position relative
    text-align center
    
    h1
      font-size 2em
    
    a
      color blue
      
      &:hover
        color dark-blue

  #modal-join #modal-join-button
    background-image url('../img/check.svg')
    background-position 50% 12px
    float left
    margin-top 10px
    width 100px
    
  .modal-footer p, .modal-footer a
    font-size font-xsmall - 0.1
    color lighter-gray
    
  .modal-footer a:hover
    color light-gray
    
  .close:hover
    cursor pointer
    opacity 0.6
  
.modal-show
  
  .modal-blanket
    pointer-events all
    opacity 0.95

  .modal
    opacity 1
    pointer-events all
    transform translate(-50%, -50%) scale(1, 1)
  
.modal-blanket
  background-color slate
  bottom 0
  height 100%
  left 0
  opacity 0
  pointer-events none
  position fixed
  right 0
  top 0
  transition opacity transition-speed ease-in-out
  width 100%
  z-index z-index-modal-blanket
  