.modal-blanket
  background-color slate
  bottom 0
  height 100%
  left 0
  opacity 0
  pointer-events none
  position fixed
  right 0
  top 0
  transition opacity transition-speed ease-in-out
  width 100%
  z-index z-index-modal-blanket
  
.modal
  background-color white
  border-radius radius
  box-shadow 0px 5px 10px rgba(0,0,0,0.15)
  left 50%
  top 50%
  min-height 300px
  opacity 0
  position absolute
  pointer-events none
  padding 20px
  transform translate(-50%, -50%) scale(0.9, 0.9)
  transition transform transition-speed-fast cubic-bezier(0.65, 0.05, 0.36, 1), opacity transition-speed-fast ease-in-out
  width 600px
  z-index z-index-modal
  
  input[type=text]
    text-overflow ellipsis
    padding-right 36px
  
  .modal-header
    overflow hidden
  
  .modal-section
    margin-top 40px
    position relative
    
  .modal-footer p
    font-size font-xsmall
    color light-gray
    
  #copy
    bottom 4px
    cursor pointer
    position absolute
    right 8px
  
.modal-show
  
  .modal-blanket
    pointer-events all
    opacity 0.95

  .modal
    opacity 1
    pointer-events all
    transform translate(-50%, -50%) scale(1, 1)
    
.close:hover
  cursor pointer
  opacity 0.6
  