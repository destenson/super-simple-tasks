.modal-blanket
  background-color rgba(0, 0, 0, 0.75)
  bottom 0
  display none
  height 100%
  left 0
  opacity 0
  position fixed
  right 0
  top 0
  transition opacity transition-speed ease-in-out
  width 100%
  z-index z-index-modal-blanket
  
.modal
  background-color white
  border-radius radius
  box-shadow 0px 5px 10px rgba(0,0,0,0.25)
  left 50%
  top 50%
  min-height 300px
  opacity 0
  position absolute
  pointer-events none
  padding 20px
  transform translate(-50%, -50%) scale(0.95, 0.95)
  transition transform transition-speed-fast cubic-bezier(0.65, 0.05, 0.36, 1), opacity transition-speed-fast ease-in-out
  width 600px
  z-index z-index-modal
  
  .modal-header
    overflow hidden
    
    img
      margin-top 5px
      
    #modal-close:hover
      cursor pointer
      opacity 0.6
  
  .modal-section
    margin-top 40px
    
  .modal-footer p
    font-size font-xsmall - 0.1
    color light-gray
  
.modal-show
  opacity 1
  pointer-events all
  transform translate(-50%, -50%) scale(1, 1)
  
.fade
  opacity 1
  