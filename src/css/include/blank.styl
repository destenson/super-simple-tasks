// Blank / empty state message

#all-done
  opacity 0
  height 1px
  overflow hidden
  margin-top 40px
  text-align center
  color light-gray
  
.show-empty-state
  opacity 1 !important
  height auto !important
  transition opacity 250ms
  
#empty-state-image
  background-image url('../img/empty-state-default.jpg')
  background-size cover
  background-color background-gray
  border-radius 5px
  cursor pointer
  height 220px
  margin 0px auto
  text-align center
  width 340px