#all-done
  color light-gray
  display none
  height 1px
  margin-top 40px
  text-align center
  pointer-events none
  
#all-done.show-empty-state
  display block
  height auto
  transition opacity 250ms
  
#empty-state-image
  background-image url('../img/empty-state-default.jpg')
  background-size cover
  background-color background-gray
  border-radius radius
  height 220px
  margin 0 auto
  width 340px