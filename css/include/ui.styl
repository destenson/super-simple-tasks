// UI style that's not the core task list

.wrapper
  margin 0 auto
  max-width 750px

.content
  margin 0 auto 40px
  padding 70px 5px 0
  min-height 640px
  opacity 0
  transition opacity 250ms, transform 250ms
  transform scale(0.95, 0.95)
  
.content-show
  opacity 1
  transform scale(1, 1)

#undo
  display none
  position fixed
  top 15px
  left 50%
  margin-left -90px
  min-width 180px
  z-index 200
  text-align center
  background-color gray
  color white
  border-radius 3px
  padding 3px 5px 4px
  cursor pointer

  &:hover
    background-color black

  img
    margin 0 10px 2px 0
    vertical-align middle

// Add a new task

#new-task-wrapper
  position relative
  overflow hidden
  
  table
    border-spacing 3px
  
  table
    width 100%
    
#new-task
  &:hover, &:focus
    border 1px solid green
    outline none
  



